#!/bin/sh /etc/rc.common

START=22

start () {
	DOMAINS=https://raw.githubusercontent.com/medvedicos/getconfig/refs/heads/main/config
	count=0
	while true; do
		if curl -m 3 github.com; then
			curl -f $DOMAINS --output /opt/zapret/config
			break
		else
			echo "GitHub is not available. Check the internet availability [$count]"
			count=$((count+1))
		fi
	done
	
    /etc/init.d/zapret restart
    
}
